<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta content="black" name="apple-mobile-web-app-status-bar-style">
    <meta content="telephone=no" name="format-detection">
    <meta content="email=no" name="format-detection">
    <title>基本配置</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <script src="/bootstrap/js/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
<%include nav.ejs %>
<form class="form-horizontal" action="/admin/config" method="post">
  <div class="form-group">
    <label for="appid" class="col-sm-2 control-label">微信Id</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="appid" value="<%= config.appid %>">
    </div>
  </div>
  <div class="form-group">
    <label for="appSecret" class="col-sm-2 control-label">微信Secret</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="appSecret" value="<%= config.appSecret %>">
    </div>
  </div>
  <div class="form-group">
    <label for="token" class="col-sm-2 control-label">微信token</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="token" value="<%= config.token %>">
    </div>
  </div>
  <div class="form-group">
    <label for="store_mchid" class="col-sm-2 control-label">商户Id</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="store_mchid" value="<%= config.store_mchid %>">
    </div>
  </div>
  <div class="form-group">
    <label for="store_key" class="col-sm-2 control-label">商户key</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="store_key" value="<%= config.store_key %>">
    </div>
  </div>
  <div class="form-group">
    <label for="encodingAESKey" class="col-sm-2 control-label">消息加密</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="encodingAESKey" value="<%= config.encodingAESKey %>">
    </div>
  </div>
  <div class="form-group">
    <label for="message_text" class="col-sm-2 control-label">消息回复内容</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="message_text" value="<%= config.message_text %>">
    </div>
  </div>
  <div class="form-group">
    <label for="message_default" class="col-sm-2 control-label">消息默认回复内容</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="message_default" value="<%= config.message_default %>">
    </div>
  </div>
  <div class="form-group">
    <label for="template_title" class="col-sm-2 control-label">支付成功模版消息标题</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="template_title" value="<%= config.template_title %>">
    </div>
  </div>
  <div class="form-group">
    <label for="template_remake" class="col-sm-2 control-label">支付成功模版消息备注</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="template_remake" value="<%= config.template_remake %>">
    </div>
  </div>    
  <div class="form-group">
    <label for="sms_accessKeyId" class="col-sm-2 control-label">短信accessKeyId</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="sms_accessKeyId" value="<%= config.sms_accessKeyId %>">
    </div>
  </div>
  <div class="form-group">
    <label for="sms_secretAccessKey" class="col-sm-2 control-label">短信secretAccessKey</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="sms_secretAccessKey" value="<%= config.sms_secretAccessKey %>">
    </div>
  </div>
  <div class="form-group">
    <label for="sms_TemplateCode" class="col-sm-2 control-label">短信模版</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="sms_TemplateCode" value="<%= config.sms_TemplateCode %>">
    </div>
  </div>
  <div class="form-group">
    <label for="sms_SignName" class="col-sm-2 control-label">短信签名</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="sms_SignName" value="<%= config.sms_SignName %>">
    </div>
  </div>
  <div class="form-group">
    <label for="server_host" class="col-sm-2 control-label">网址</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="server_host" value="<%= config.server_host %>">
    </div>
  </div>
<div class="form-group">
    <label for="derate_money" class="col-sm-2 control-label">首单减免价格(分)</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="derate_money" value="<%= config.derate_money %>">
    </div>
  </div>  
  
  <div class="form-group">
    <label for="spread_voucher" class="col-sm-2 control-label">推广获得m面值代金券(分)</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="spread_voucher" value="<%= config.spread_voucher %>">
    </div>
  </div> 
  <div class="form-group">
    <label for="signup_phone_integral" class="col-sm-2 control-label">注册手机获得x积分</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="signup_phone_integral" value="<%= config.signup_phone_integral %>">
    </div>
  </div> 
  <div class="form-group">
    <label for="shoping_integral" class="col-sm-2 control-label">购买商品获得x积分/元</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="shoping_integral" value="<%= config.shoping_integral %>">
    </div>
  </div> 
  <div class="form-group">
    <label for="n_integral" class="col-sm-2 control-label">换取m面值代金券所需n积分</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="n_integral" value="<%= config.n_integral %>">
    </div>
  </div> 
  <div class="form-group">
    <label for="m_voucher" class="col-sm-2 control-label">m面值代金券(分)</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="m_voucher" value="<%= config.m_voucher %>">
    </div>
  </div>           
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="radio">
        <label>
          <input type="radio" value="true" >我要修改
        </label>      
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">修改</button>
    </div>
  </div>
</form>
<script>
$(function() {
  $("form").submit(function(e){
    var $true = $('input:checked').val();
    if($true) {
      return true;
    }else{
      return false;
    }
  });
});

</script>

</body>
</html>
